<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@stylesheets/ServerSettings.css"
            xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label layoutX="130.0" layoutY="14.0" text="Game server settings">
            <font>
                <Font name="System Bold" size="35.0"/>
            </font>
        </Label>
        <Label layoutX="196.0" layoutY="85.0" text="Set server hostname or server's ip">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <TextField fx:id="hostnameTextField" layoutX="217.0" layoutY="117.0" onAction="#onServerChanged"
                   prefHeight="28.0" prefWidth="161.0" promptText="www.example.it"/>
        <HBox alignment="CENTER" layoutX="191.0" layoutY="151.0" prefHeight="30.0" prefWidth="218.0">
            <children>
                <Line endX="100.0" startX="20.0" stroke="#848484">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Line>
                <Circle fill="#1f93ff00" radius="5.0" stroke="#848484" strokeType="INSIDE">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Circle>
                <Line endX="100.0" startX="20.0" stroke="#848484">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                </Line>
            </children>
        </HBox>
        <Accordion layoutX="217.0" layoutY="181.0">
            <panes>
                <TitledPane prefHeight="83.0" prefWidth="181.0" styleClass="AccordionPane" text="change default port">
                    <content>
                        <AnchorPane prefHeight="25.0" prefWidth="170.0">
                            <children>
                                <TextField fx:id="portText" layoutY="5.0" onAction="#onPortChanged" prefHeight="27.0"
                                           prefWidth="162.0" promptText="5501">
                                    <font>
                                        <Font name="System Bold" size="12.0"/>
                                    </font>
                                </TextField>
                                <Label id="PortError" fx:id="portErrorLabel" layoutX="7.0" layoutY="42.0"
                                       prefHeight="28.0" prefWidth="136.0" styleClass="errorLabel"
                                       text="Please use a user tcp port" textFill="#d20000"/>
                            </children>
                        </AnchorPane>
                    </content>
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </TitledPane>
            </panes>
        </Accordion>
        <HBox layoutX="440.0" layoutY="355.0">
            <children>
                <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#onCancel" prefHeight="30.0"
                        prefWidth="65.0" text="Cancel">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
                <Button alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                        minWidth="-Infinity" mnemonicParsing="false" onAction="#onNext" prefHeight="30.0"
                        prefWidth="65.0" text="Next">
                    <HBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </HBox.margin>
                    <font>
                        <Font name="System Bold" size="12.0"/>
                    </font>
                </Button>
            </children>
        </HBox>
        <Label fx:id="invalidAddress" layoutX="388.0" layoutY="86.0" styleClass="errorLabel"
               text="(Insert a valid hostname or ip)"/>
    </children>
</AnchorPane>
